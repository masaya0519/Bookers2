<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <div>
      <% if user == current_user %>
        <%= link_to edit_user_path(current_user) do %>
          <i class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_current_user"></i>
        <% end %>
      <% else %>
        <%= link_to edit_user_path(user) do %>
          <i class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_current_user"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model:Book.new do |f| %>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
</div>