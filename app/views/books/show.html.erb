<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'list', user: @user,  book: @newbook %>

    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(50, 50) %>
                <% end %><br>
                <span><%= link_to @user.name, user_path(@user) %></span>
              </td>
              <td>
                <span><%= link_to @book.title, book_path(@book.id) %></span>
              </td>
              <td>
                <span><%= @book.body %></span>
              </td>
              <td>

              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_47471" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to 'Destroy', book_path(@book.id), method: :delete, "deta-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_47490" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>